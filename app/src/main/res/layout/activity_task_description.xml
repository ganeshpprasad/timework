<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout_routine_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.example.ganesh.timework.TaskDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_tasks_detail_page"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/name_task_detail_page"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:text="Task Name"
                android:background="@android:color/transparent"
                android:textAppearance="?android:textAppearance"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/type_task_detail_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textAppearance="?android:textAppearance"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/time_task_detail_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="12:00"
                android:textAppearance="?android:textAppearance"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/date_task_detail_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="4 / 5 / 16"
                android:textAppearance="?android:textAppearance"
                android:textSize="20sp"/>

            <CheckBox
                android:id="@+id/notify_checkbox_task_detail_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify"
                android:textAppearance="?android:textAppearance"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>