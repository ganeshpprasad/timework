<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="7">

        <TextView
            android:id="@+id/task_name_task_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Task Name"
            android:layout_marginBottom="4dp"
            style="@style/TextStyleTaskCardsTitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_list_item_placeholder_image"/>

                <TextView
                    android:id="@+id/task_time_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="7:00 AM"
                    style="@style/TextStyleTaskCardContent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_nav_menu_tasks"/>

                <TextView
                    android:id="@+id/task_Date_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="Jan 29"
                    style="@style/TextStyleTaskCardContent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ToggleButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/task_check_item"
        android:layout_weight="1"
        android:textOff=""
        android:textOn=""
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/task_check_item_toggle"/>

</LinearLayout>
