<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="8dp"
    android:background="@color/lightGray"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/task_name_task_list_item"
        style="@style/TextStyleTaskCardsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Task Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textAppearance="?android:textAppearanceSmall"
        tools:text="This is a task description."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_list_item_placeholder_image"/>

            <TextView
                android:id="@+id/task_time_list_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:textAppearanceSmall"
                tools:text="7:00 AM"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_nav_menu_tasks"/>

            <TextView
                android:id="@+id/task_Date_list_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:textAppearanceSmall"
                tools:text="Jan 29"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
