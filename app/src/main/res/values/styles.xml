<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Tab style -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <!-- for text in tab -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Style for heading in forums -->
    <style name="TextStyleForHeadings" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Parent style for all text -->

    <style name="TextAppTheme">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Parent style for content text - light -->

    <style name="TextAppTheme.Body">
        <item name="android:fontFamily">serif-light</item>
    </style>

    <!-- Parent style for title of items - bold -->

    <style name="TextAppTheme.Heading">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Task list item and task heading in fragments styles -->

    <!-- Style for task and routine heading in today fragment -->
    <style name="TextStyleTaskHeading" parent="TextAppTheme.Heading">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyleTaskCardsTitle" parent="TextAppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextStyleTaskCardContent" parent="TextAppTheme.Body">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textScondary</item>
    </style>

    <!-- Routine item title style -->
    <style name="TextStyleRoutineCardsTitle" parent="TextAppTheme">
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <!-- No text size cause its set based on time size selected for the routine -->
    </style>

    <!-- Routine item time text style -->
    <style name="TextStyleRoutineCardsTime" parent="TextAppTheme.Body">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textScondary</item>
    </style>

    <style name="TextStyleRoutineCardsType" parent="TextAppTheme.Body">
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textScondary</item>
    </style>

</resources>
